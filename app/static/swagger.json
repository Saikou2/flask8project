{
  "openapi": "3.0.0",
  "info": {
    "title": "API Flask",
    "version": "1.0.0",
    "description": "Documentation complète de l'API d'authentification et de gestion des utilisateurs, livres et emprunts"
  },
  "servers": [
    {
      "url": "https://flask8project-saikou-oumar-diallo-8rtc.onrender.com",
      "description": "Serveur local"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Inscription d'un utilisateur",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["username", "email", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Utilisateur créé avec succès"
          },
          "400": {
            "description": "L'utilisateur existe déjà"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Connexion d'un utilisateur",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": {
                      "type": "string"
                    },
                    "role": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Nom d'utilisateur ou mot de passe incorrect"
          }
        }
      }
    },
    "/auth/profile": {
      "get": {
        "summary": "Obtenir le profil d'un utilisateur",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Profil de l'utilisateur",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "username": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "role": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Utilisateur non trouvé"
          }
        }
      }
    },
    "/api/admin/users": {
      "get": {
        "summary": "Récupérer tous les utilisateurs",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des utilisateurs",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "username": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string",
                        "format": "email"
                      },
                      "role": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Accès refusé"
          }
        }
      }
    },
    "/api/admin/create-book": {
      "post": {
        "summary": "Créer un nouveau livre",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "author": {
                    "type": "string"
                  }
                },
                "required": ["title", "author"]
              }
            }
          },
          "responses": {
            "201": {
              "description": "Livre créé avec succès"
            },
            "400": {
              "description": "Titre et auteur sont requis"
            }
          }
        }
      }
    },
    "/api/books": {
      "get": {
        "summary": "Récupérer tous les livres",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des livres",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "author": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/loans": {
      "post": {
        "summary": "Créer un nouvel emprunt de livre",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "book_id": {
                    "type": "integer"
                  },
                  "issue_date": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": ["book_id", "issue_date"]
              }
            }
          },
          "responses": {
            "201": {
              "description": "Emprunt créé avec succès",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "user_id": {
                        "type": "integer"
                      },
                      "book_id": {
                        "type": "integer"
                      },
                      "issue_date": {
                        "type": "string",
                        "format": "date"
                      },
                      "return_date": {
                        "type": "string",
                        "format": "date"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Données manquantes ou invalides"
            }
          }
        }
      }
    },
    "/loans/return/{loan_id}": {
      "put": {
        "summary": "Retourner un livre emprunté",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "loan_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "return_date": {
                    "type": "string",
                    "format": "date"
                  }
                },
                "required": ["return_date"]
              }
            }
          },
          "responses": {
            "200": {
              "description": "Livre retourné avec succès"
            },
            "404": {
              "description": "Emprunt non trouvé"
            }
          }
        }
      }
    },
    "/loans/{user_id}": {
      "get": {
        "summary": "Obtenir la liste des emprunts pour un utilisateur spécifique",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des emprunts de l'utilisateur",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "user_id": {
                        "type": "integer"
                      },
                      "book_id": {
                        "type": "integer"
                      },
                      "issue_date": {
                        "type": "string",
                        "format": "date"
                      },
                      "return_date": {
                        "type": "string",
                        "format": "date"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Aucun emprunt trouvé pour cet utilisateur"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
